@inherits UmbracoViewPage
@{
    var homepage=Model.AncestorOrSelf<HomePage>();
    var footerLinks = homepage.Footer_SoicalLinks;
}
<footer class="border-top">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <ul class="list-inline text-center">
                    @{
                        if (footerLinks != null)
                        {
                            foreach (var item in footerLinks)
                            {
                                <li class="list-inline-item">
                                    <a href="@item.Url">
                                        <span class="fa-stack fa-lg">
                                            <i class="fas fa-circle fa-stack-2x"></i>
                                            <i class="fab fa-@item.Network fa-stack-1x fa-inverse"></i>
                                        </span>
                                    </a>
                                </li>
                            }
                        }
                    }
                </ul>
                <div class="small text-center text-muted fst-italic">&copy; @Umbraco.GetDictionaryValue("copy-right") @DateTime.Now.Year</div>
            </div>
        </div>
    </div>
</footer>
